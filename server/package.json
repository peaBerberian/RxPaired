{
  "name": "rx-paired-server",
  "version": "0.0.1",
  "description": "Server for RxPaired: the lightweight, RxPlayer-oriented, remote inspector",
  "main": "./build/main.js",
  "type": "module",
  "scripts": {
    "build": "tsc --project .",
    "bundle": "npm run build && esbuild --bundle --platform=node --format=esm ./RxPaired-server --outfile=RxPaired-server.bundle.mjs",
    "run": "node ./build/main.js",
    "start": "npm run build && npm run run",
    "check": "tsc --noEmit --project .",
    "lint": "eslint src -c .eslintrc.cjs"
  },
  "author": "peaberberian",
  "license": "MIT",
  "dependencies": {
    "ws": "8.13.0"
  },
  "devDependencies": {
    "@types/node": "20.4.5",
    "@types/ws": "8.5.5",
    "@typescript-eslint/eslint-plugin": "6.2.1",
    "esbuild": "0.19.11",
    "eslint": "8.46.0",
    "eslint-plugin-import": "2.28.0",
    "eslint-plugin-jsdoc": "46.4.5",
    "typescript": "5.1.6"
  }
}
